{
  "name": "stockclerk",
  "version": "1.0.0",
  "description": "StockClerk - Real-time inventory synchronisation platform",
  "private": true,
  "workspaces": [
    "packages/backend",
    "packages/integrations",
    "packages/frontend",
    "packages/sync-engine"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "dev:backend": "npm run dev --workspace=packages/backend",
    "dev:frontend": "npm run dev --workspace=packages/frontend",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:unit": "npm run test:unit --workspaces --if-present",
    "test:integration": "npm run test:integration --workspace=packages/backend",
    "test:e2e": "npx playwright test --config=e2e/playwright.config.ts",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "docker:up": "docker-compose -f docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f docker/docker-compose.yml down",
    "docker:logs": "docker-compose -f docker/docker-compose.yml logs -f",
    "docker:services": "docker-compose -f docker/docker-compose.yml up -d postgres redis",
    "db:generate": "npm run db:generate --workspace=packages/backend",
    "db:migrate": "npm run db:migrate --workspace=packages/backend",
    "db:push": "npm run db:push --workspace=packages/backend",
    "db:seed": "npm run db:seed --workspace=packages/backend",
    "db:studio": "npm run db:studio --workspace=packages/backend",
    "setup": "./scripts/setup.sh",
    "start": "./scripts/dev.sh",
    "integration-check": "npx tsx tests/integration-check.ts",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^1.1.0",
    "concurrently": "^8.2.2",
    "tsx": "^4.16.2",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "stripe": "^20.3.1"
  }
}
