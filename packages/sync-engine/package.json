{
  "name": "@stockclerk/sync-engine",
  "version": "1.0.0",
  "description": "StockClerk AI-powered Real-time Sync Engine with 4 intelligent agents",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js --format=esm --external:@stockclerk/integrations --external:ioredis --external:bullmq --external:zod --external:eventemitter3",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts"
  },
  "dependencies": {
    "@stockclerk/integrations": "*",
    "ioredis": "^5.3.2",
    "bullmq": "^5.1.1",
    "zod": "^3.22.4",
    "eventemitter3": "^5.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "esbuild": "^0.27.2",
    "vitest": "^1.1.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "stockclerk",
    "inventory",
    "sync",
    "multi-channel",
    "eposnow",
    "wix",
    "deliveroo"
  ]
}
